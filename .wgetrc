#########################
# wget global config
#########################

# use server provided last modification date
timestamping = on

# dont go up when downloading recursivley
no_parent = on

# wait 60, on all timeouts DNS, connect and read
timeout = 60

# retry less than default 20
tries = 3

# retry when connection refused
retry_connrefused = on

# last component of (redirection) url for local filename
trust_server_names = on

# follow ftp links
follow_ftp = on

# add extension based on contentype
adjust_extension = on

# ignore robots
robots = off

# print http and ftp server responses
server_response = on

# user agent
# see: http://www.browser-info.net/useragents
user_agent = Mozilla/5.0 (Windows NT 6.1; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/40.0.2214.85 Safari/537.36


